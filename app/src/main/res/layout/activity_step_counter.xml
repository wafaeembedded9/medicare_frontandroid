<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/marche6"
    tools:context=".StepCounter">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Step Counter"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Step Goal : 5000"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="117dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/circualer"
        android:padding="10dp"
        android:progressDrawable="@drawable/custom_progress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="79dp"
            android:layout_height="96dp"
            android:src="@drawable/footsteps_silhouette_variant_svgrepo_com" />


        <TextView
            android:id="@+id/stepCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="step:0"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="89dp"
            android:src="@drawable/path_distance_svgrepo_com" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Distance:0"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:layout_width="79dp"
            android:layout_height="96dp"
            android:src="@drawable/time_svgrepo_com" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Time:0"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/Button990"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:onClick="onPauseButtonClicked"
        android:padding="20dp"
        android:text="Pause"
        android:textSize="16sp" />
</LinearLayout>
