<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cieel"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:cardBackgroundColor="@color/ciel">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="  Surveillance médicale"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Adresseip"
            android:layout_width="245dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" Adresse  IP"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/bl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/frequencecardiaque_svg" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="298dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Pulsation cardiaque :"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="123dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/saturation" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="288dp"
            android:layout_height="126dp"
            android:gravity="center_vertical"
            android:text="SpO2 :"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="99dp"
            android:layout_height="131dp"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/check_body_temperature_1_" />

        <TextView
            android:id="@+id/tx_value"
            android:layout_width="243dp"
            android:layout_height="151dp"
            android:gravity="center_vertical"
            android:text="Température:"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ImageButton pour ic_media_ff -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton_ff"
            android:layout_width="97dp"
            android:layout_height="85dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/Cieel"
            android:src="@android:drawable/ic_media_ff" />

    </LinearLayout>

    <TextView
        android:id="@+id/tx_unit"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginStart="272dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Flow Value"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:autoText="false"
        android:text="Control Section"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="112dp"
        android:drawSelectorOnTop="true" />

    <Button
        android:id="@+id/save_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="84dp"
        android:text="Set" />

</LinearLayout>
